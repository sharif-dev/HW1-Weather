                android:text="Mon"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/forecast_condition_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/text_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/high_temp" />

                <TextView
                    android:id="@+id/forecast_high_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23°" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/low_temp" />

                <TextView
                    android:id="@+id/forecast_low_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17°" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast_date_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/forecast_condition_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/text_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/high_temp" />

                <TextView
                    android:id="@+id/forecast_high_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23°" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/low_temp" />

                <TextView
                    android:id="@+id/forecast_low_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17°" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forecast_date_4"
                android:layout_width="match_parent"
